# ============================================
# NF Dispatch Planner - Production Environment
# ============================================
# Copy this file to .env.production and fill in the values
# Usage: docker-compose -f docker-compose.yml -f docker-compose.prod.yml --env-file .env.production up -d

# ===================
# Database
# ===================
DB_USER=nf_production_user
DB_PASSWORD=<STRONG_PASSWORD_HERE>
DB_NAME=nf_dispatch_prod
DB_PORT=5432

# ===================
# Redis
# ===================
REDIS_PASSWORD=<STRONG_REDIS_PASSWORD_HERE>
REDIS_PORT=6379

# ===================
# Application
# ===================
ENVIRONMENT=production
DEBUG=false

# IMPORTANT: Generate a secure secret key for production!
# Use: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=<GENERATE_SECURE_SECRET_KEY>

# ===================
# CORS
# ===================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://your-domain.com

# ===================
# API
# ===================
VITE_API_URL=https://your-domain.com/api/v1

# ===================
# Ports (for external access)
# ===================
# In production, only nginx should be exposed
BACKEND_PORT=8000
FRONTEND_PORT=3000

# ===================
# Backup
# ===================
BACKUP_DIR=/var/backups/nf_dispatch
BACKUP_RETENTION_DAYS=30

# ===================
# SSL (if using Let's Encrypt)
# ===================
SSL_EMAIL=admin@your-domain.com
SSL_DOMAIN=your-domain.com
